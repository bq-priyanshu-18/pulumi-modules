{
    "family": "nginx-task",
    "containerDefinitions": [
      {
        "name": "nginx-container",
        "image": "nginx:latest",
        "cpu": 256,
        "memory": 512,
        "portMappings": [
          {
            "containerPort": 80,
            "hostPort": 80
          }
        ],
        "essential": true,
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/nginx-task",
            "awslogs-region": "us-east-1",
            "awslogs-stream-prefix": "nginx-container"
          }
        }
      }
    ],
    "networkMode": "awsvpc"
  }
  